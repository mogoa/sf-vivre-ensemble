{# templates/contact/index.html.twig #}
{% extends 'base.html.twig' %}

{% block structured_data %}
    {{ parent() }}

    <script type="application/ld+json">
        {
        "@context": "https://schema.org",
        "@type": "ContactPage",
        "name": "Contact - Vivre ensemble à La Roche-Clermault",
        "description": "Formulaire de contact pour joindre l'équipe de la liste Vivre ensemble à La Roche-Clermault",
        "url": "{{ url('contact') }}",
        "isPartOf": {
            "@type": "WebSite",
            "name": "Vivre ensemble à La Roche-Clermault",
            "url": "{{ app.request.schemeAndHttpHost }}"
        },
        "mainEntity": {
            "@type": "Organization",
            "name": "Vivre ensemble à La Roche-Clermault",
            "url": "{{ app.request.schemeAndHttpHost }}",
            "contactPoint": {
            "@type": "ContactPoint",
            "contactType": "Customer Service",
            "email": "contact@vivreensemble-larocheclermault.fr",
            "availableLanguage": "French",
            "areaServed": "FR"
            }
        }
        }
    </script>
{% endblock %}


{% block meta_keywords %}
Contact
{% endblock %}

{% block body %}
<section class="w-full bg-gradient-to-b from-white to-gray-50 py-16 lg:py-24">
    <div class="container mx-auto px-4 lg:px-8 max-w-4xl">

        <!-- En-tête -->
        <div class="text-center mb-12">
            <h1 class="text-4xl lg:text-5xl font-bold text-green-900 mb-4">
                Contactez-nous
            </h1>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Partagez vos remarques, suggestions ou questions. Nous sommes à votre écoute pour construire ensemble l'avenir de La Roche-Clermault.
            </p>
        </div>

        <!-- Messages flash -->
        {% for message in app.flashes('success') %}
            <div class="mb-6 p-4 bg-green-100 border-l-4 border-green-500 text-green-700 rounded-lg">
                <div class="flex items-center gap-2">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <p class="font-medium">{{ message }}</p>
                </div>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="mb-6 p-4 bg-red-100 border-l-4 border-red-500 text-red-700 rounded-lg">
                <div class="flex items-center gap-2">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    <p class="font-medium">{{ message }}</p>
                </div>
            </div>
        {% endfor %}

        <!-- Formulaire -->
        <div class="bg-white rounded-2xl shadow-2xl p-8 lg:p-12 border-t-4 border-[#4ECDC4]">
            {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate', 'data-controller': 'contact-form'}}) }}

            <!-- Nom -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    {{ form_label(form.name) }}
                    <span class="text-red-500">*</span>
                </label>
                {{ form_widget(form.name) }}
                <div class="form-errors">
                    {{ form_errors(form.name) }}
                </div>
            </div>


            <!-- Message -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    {{ form_label(form.message) }}
                    <span class="text-red-500">*</span>
                </label>
                {{ form_widget(form.message) }}
                <div class="form-errors">
                    {{ form_errors(form.message) }}
                </div>
            </div>

            <!-- Honeypot INVISIBLE - Ne doit JAMAIS apparaître à l'écran -->
            <div style="position: absolute; left: -9999px; opacity: 0; pointer-events: none; width: 0; height: 0; overflow: hidden;">
                {{ form_row(form.website, {'label': false, 'attr': {'tabindex': '-1', 'autocomplete': 'off'}}) }}
            </div>

            <!-- Case à cocher recontact -->
            <div class="flex items-start gap-3">
                <div class="flex items-center h-6">
                    {{ form_widget(form.recontact)}}
                </div>
                <div class="text-sm">
                    <label for="{{ form.recontact.vars.id }}" class="font-medium text-gray-700 cursor-pointer select-none">
                        Je souhaite être recontacté(e)
                    </label>
                    <p class="text-xs text-gray-500 mt-1">Nous vous répondrons par email si vous cochez cette case</p>
                </div>
            </div>


            <!-- Email -->
            <div data-contact-form-target="emailContainer">
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    {{ form_label(form.email) }}
                    <span class="text-red-500">*</span>
                </label>
                {{ form_widget(form.email) }}
                <div class="form-errors">
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <!-- Bouton submit -->
            <div class="pt-6">
                <button type="submit"
                        class="w-full py-5 px-6 bg-gradient-to-r from-[#4ECDC4] to-[#26A69A] text-white text-lg font-semibold rounded-xl hover:opacity-90 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02] active:scale-95 cursor-pointer">
                    <span class="flex items-center justify-center gap-3">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        Envoyer le message
                    </span>
                </button>
            </div>

            {{ form_end(form) }}
        </div>

    </div>
</section>
{% endblock %}
