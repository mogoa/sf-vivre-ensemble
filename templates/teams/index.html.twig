{% extends 'base.html.twig' %}

{% block body %}

<section class="relative">
  <!-- Carousel (background hero) -->
  {% include 'component/carousel.html.twig' with {'image_files': image_files } %}

  <!-- Page title overlayed in front of the carousel -->
</section>

<section>
<!-- Grille de programme dynamique -->
<div class="mx-auto max-w-6xl px-4 py-12">
        <div class="flex flex-wrap justify-center gap-6">
        {% for thumb in thumbs %}
			{% if loop.index == 1 %}
				<div class="flex flex-col items-center w-full ">
					<div class="w-96 h-96 rounded-full overflow-hidden shadow-md ">
						<img class="scale-125 rounded-full h-full w-full object-cover shadow-xl shadow-gray-800 cursor-pointer "
						srcset="{{ asset(thumb.rootPath ~ '/' ~ thumb.folderName ~ '/' ~ thumb.filename) }}"
						alt="{{ thumb.realname }}">
					</div>
					<p class="mt-3 text-2xl text-center font-semibold leading-tight text-[#26A69A]">
						{{ thumb.realname }}
					</p>
					<p class="mt-2 text-center font-semibold leading-tight text-[#26A69A]">
						{{ thumb.age }}
					</p>
					<p class="mt-2 text-center font-semibold leading-tight text-[#26A69A]">
						{{ thumb.description }}
					</p>
				</div>
			{% else %}
            <div class="flex flex-col items-center w-full sm:w-1/2 md:w-1/3 lg:w-1/4 m-4">
            	<div class="w-72 h-72 sm:w-42 sm:h-42 md:w-54 md:h-54 rounded-full overflow-hidden shadow-2xl">
            		<img class="rounded-full h-full w-full object-cover shadow-xl shadow-gray-800 cursor-pointer hover:scale-130 ease-in transition-all duration-400"
					srcset="{{ asset(thumb.rootPath ~ '/' ~ thumb.folderName ~ '/' ~ thumb.filename) }}"
					data-modal-target="modal-{{ loop.index }}" data-modal-show="modal-{{ loop.index }}"
					alt="{{ thumb.realname }}">
             	</div>
				<p class="mt-3 text-center text-2xl font-semibold leading-tight text-[#26A69A]">
					{{ thumb.realname }}
				</p>
				<p class="mt-2 text-center font-semibold leading-tight text-[#26A69A]">
					{{ thumb.age }}
				</p>
				<p class="mt-2 text-center font-semibold leading-tight text-[#26A69A]">
					{{ thumb.description }}
				</p>
            </div>

			<div id="modal-{{ loop.index }}" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
				<div class="relative p-4 w-full max-w-2xl">
					<img class="rounded-full w- h-96 object-cover shadow-xl shadow-gray-800 cursor-pointer"
					srcset="{{ asset(thumb.rootPath ~ '/' ~ thumb.folderName ~ '/' ~ thumb.filename) }}"
					alt="{{ thumb.realname }}">
				</div>
			</div>
            {% endif %}
        {% endfor %}
    </div>
</div>
</section>
{% endblock %}
