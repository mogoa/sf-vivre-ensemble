{% extends 'base.html.twig' %}

{% block title %}Hello ElectionsController!{% endblock %}

{% block body %}

<section class="mx-auto max-w-8xl px-16 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="md:border-r md:border-default md:pr-8">
            <ol class="relative border-s border-default">
                {% for event in events %}
                    <li class="mb-10 ms-6">
                        {% if event.is_past %}
                            <span class="absolute flex items-center justify-center w-6 h-6 bg-green-100 rounded-full -start-3 ring-8 ring-buffer">
                                <svg class="w-3 h-3 text-green-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 6 9 17l-5-5"/></svg>
                            </span>
                        {% else %}
                        <span class="absolute flex items-center justify-center w-6 h-6 bg-brand-softer rounded-full -start-3 ring-8 ring-buffer">
                            <svg class="w-3 h-3 text-fg-brand-strong" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 10h16m-8-3V4M7 7V4m10 3V4M5 20h14a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1Zm3-7h.01v.01H8V13Zm4 0h.01v.01H12V13Zm4 0h.01v.01H16V13Zm-8 4h.01v.01H8V17Zm4 0h.01v.01H12V17Zm4 0h.01v.01H16V17Z"/></svg>
                        </span>
                        {% endif %}
                        <time class="bg-neutral-secondary-medium border border-default-medium text-heading text-2xs font-medium px-1.5 py-0.5 rounded">{{ event.date|format_datetime('full', 'none', locale: 'fr') }}</time>
                        <h3 class="flex items-center mb-1 text-lg text-heading my-2">{{ event.title }}
                            {% if event.is_today %}
                                <span class="ms-2 bg-brand-softer border border-brand-subtle text-fg-brand-strong text-xs font-medium px-1.5 py-0.5 rounded">
                                    Aujourd’hui
                                </span>
                            {% elseif event.is_soon %}
                                <span class="ms-2 bg-amber-50 border border-amber-200 text-amber-800 text-xs font-medium px-1.5 py-0.5 rounded">
                                    À venir
                                </span>
                            {% endif %}
                        </h3>
                    </li>

                {% endfor %}
                </ol>
            </div>

        {# Colonne droite : vidéo + texte #}
        <div class="md:pl-8 flex flex-col gap-6">
            <div class="aspect-video rounded-lg overflow-hidden border border-default bg-black">
                {# Remplace l’URL par ta vidéo (YouTube, iframe, etc.) #}
                <iframe
                    class="w-full h-full"
                    src="https://www.youtube.com/embed/dQw4w9WgXcQ"
                    title="Vidéo de campagne"
                    frameborder="0"
                    allowfullscreen
                ></iframe>
            </div>

            <div>
                <h2 class="text-2xl font-semibold text-heading mb-3">
                    Notre calendrier de campagne
                </h2>
                <p class="text-body text-sm md:text-base">
                    Retrouvez ici les principaux rendez-vous de la campagne, des réunions publiques aux temps d’échanges informels avec les habitant·e·s.
                </p>
                <p class="text-body text-sm md:text-base mt-2">
                    La vidéo présente les grandes lignes de notre projet et les temps forts à ne pas manquer.
                </p>
            </div>
        </div>


    </div>
</section>


{% endblock %}
