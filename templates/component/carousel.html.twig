<div id="carousel-example" data-controller="carousel" class="relative w-full">
    <!-- Wrapper Hero -->
    <div class="relative h-screen max-h-[70vh] overflow-hidden">
        {% for image_file in image_files %}
            <div
                data-carousel-target="item"
                data-carousel-item
                class="hidden carousel-slide"
            >
                <img
                    src="{{ asset(image_path ~ image_file) }}"
                    class="w-full h-full object-cover"
                    alt="Slide {{ loop.index }}"
                />
            </div>
        {% endfor %}
    </div>

    <!-- Indicators -->
    <div class="absolute bottom-6 left-1/2 z-30 flex -translate-x-1/2 space-x-3">
        {% for image_file in image_files %}
            <button
                data-carousel-target="indicator"
                type="button"
                class="h-3 w-3 rounded-full bg-white/50 transition-all hover:bg-white/75"
                aria-label="Slide {{ loop.index }}"
            ></button>
        {% endfor %}
    </div>

    <!-- Controls -->
    <button
        type="button"
        data-action="click->carousel#prev"
        class="absolute left-4 top-1/2 -translate-y-1/2 z-30 text-white text-5xl px-4 py-2 hover:bg-black/30 rounded transition-colors"
    >
        ‹
    </button>

    <button
        type="button"
        data-action="click->carousel#next"
        class="absolute right-4 top-1/2 -translate-y-1/2 z-30 text-white text-5xl px-4 py-2 hover:bg-black/30 rounded transition-colors"
    >
        ›
    </button>
</div>

